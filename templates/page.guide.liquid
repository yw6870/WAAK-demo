<div class="page-width">
  <div class="guide-title">ご利用ガイド</div>
  <div class="guide-contents">

  {% comment %} ############## リンクリスト（ガイドメニュー） ########################################### {% endcomment %}
    <div class="contents-left">
      <ul class="guide-menu">
      {% assign menu = linklists.guide-menu %}
      {% for link in menu.links %}
        {% comment %} #########　if文（page.title = page.link） {% endcomment %}
        {% if　link.title == page.title %}
          <li><span class="current-page">|</span>
        {% else %}
          <li><span class="not-current-page">|</span>
        {% endif %}
        {% comment %} #########　if文（page.title = page.link） {% endcomment %}
          {% comment %} ######## case文（アイコンを変える） {% endcomment %}
          {% case link.title %}
            {% when 'ご注文について' %}<a href="{{ link.url }}"><img src="#">{{ link.title }}</a></li>
            {% when 'お届けについて' %}<a href="{{ link.url }}"><img src="#">{{ link.title }}</a></li>
            {% when 'お支払いについて' %}<a href="{{ link.url }}"><img src="#">{{ link.title }}</a></li>
            {% when 'サービスについて' %}<a href="{{ link.url }}"><img src="#">{{ link.title }}</a></li>
            {% when '返品・キャンセルについて' %}<a href="{{ link.url }}"><img src="#">{{ link.title }}</a></li>
          {% endcase %}
          {% comment %} ######## case文（アイコンを変える） {% endcomment %}
      {% endfor %}
      </ul>
    </div>
  {% comment %} ############## リンクリスト（ガイドメニュー） ########################################### {% endcomment %}

    <div class="contents-right">
      <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
        <div class="section-header text-center">
          {% case page.title %}
            {% when 'ご注文について' %}
              <h1 class="guide-page-title"><img src="#">{{ page.title }}</h1>
            {% when 'お届けについて' %}
              <h1 class="guide-page-title"><img src="#">{{ page.title }}</h1>
            {% when 'お支払いについて' %}
              <h1 class="guide-page-title"><img src="#">{{ page.title }}</h1>
            {% when 'サービスについて' %}
              <h1 class="guide-page-title"><img src="#">{{ page.title }}</h1>
            {% when '返品・キャンセルについて' %}
              <h1 class="guide-page-title"><img src="#">{{ page.title }}</h1>
          {% endcase %}
        </div>

        <div class="rte">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>
</div>


<style>
  @media screen and (min-width: 750px) {
    .guide-title {
      padding-left: 10px;
      line-height: 2em;
      font-weight: bold;
      background: black;
      color: white;
      margin-bottom: 50px;
    }
    .guide-contents {
      display: flex;
      justify-content:space-between;
    }
    .contents-left {
      height:800px;
      min-width: 200px;
      width: 25%;
    }
    .guide-menu {
    }
    .guide-menu li {
      line-height: 3em;
      font-size: 0.8em;
      border-bottom: 1px solid black;
    }
    .current-page-li {
      border-bottom: 2px solid black!important;
    }
    .guide-menu li:last-child {
      line-height: 3em;
      border-bottom: none;
    }
    .current-page {
      font-weight: bold;
      font-size: 2.5em;
    }
    .not-current-page {
      font-weight: bold;
      font-size: 2.5em;
      color: white;
    }
    .contents-right {
      border:1px solid black;
      height:800px;
      width: 75%;
    }
    .guide-page-title {
      font-size: 2em;
      display: block;
      border-bottom: 1px solid black;
    }
  }
  @media screen and (max-width: 749px) {
    
  }
</style>